# Si RELAXATION
SYSTEM  = "Si"
  
ISTART = 0          # no initial charges
PREC = Accurate     # accurate precision
IBRION = 2          # ionic relaxation (conjugate gradient)
ENCUT = 2*245.345   # 2*ENMAX from POTCAR
EDIFF = 1.0e-08     # decrease for more precise results
EDIFFG = -1.0e-04   # break condition for ionic relaxation
NSW = 200           # number steps

ISMEAR = 0          # gaussian smearing
SIGMA = 0.01        # "width of smearing"

ISYM = 1            # symmetry on (0 for symmetry off)
ALGO = Normal       # electronic minimization algorithm
LREAL = .FALSE.     # projection done in reciprocal space 
LWAVE = .FALSE.     # generate WAVECAR
LCHARG = .FALSE.    # generate CHGCAR
NCORE = 4           # number of cores used
